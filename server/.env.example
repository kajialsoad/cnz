# ======================
# SERVER CONFIGURATION
# ======================
PORT=4000
NODE_ENV=development

# ======================
# DATABASE CONFIGURATION
# ======================
# Replace with your PostgreSQL connection string
# Local: postgresql://username:password@localhost:5432/cleancare_db
# Production: Set this in Railway environment variables
DATABASE_URL=postgresql://username:password@localhost:5432/cleancare_db

# ======================
# APP URLs
# ======================
# Local Development
APP_URL=http://localhost:4000
CLIENT_URL=http://localhost:3000

# Production URLs (for Railway - set these in Railway variables)
# APP_URL=https://munna-production.up.railway.app
# CLIENT_URL=https://munna-production.up.railway.app
# BASE_URL=https://munna-production.up.railway.app

# ======================
# JWT CONFIGURATION
# ======================
# Generate secure random strings for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your_super_secret_access_key_here_change_this
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_this
ACCESS_TTL=7d
REFRESH_TTL=30d

# ======================
# CORS CONFIGURATION
# ======================
# Comma-separated list of allowed origins
# Local Development
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Production CORS (for Railway - set these in Railway variables)
# CORS_ORIGIN=https://munna-production.up.railway.app,https://munna-production.up.railway.app/admin
# CORS_ORIGINS=https://munna-production.up.railway.app,https://munna-production.up.railway.app/admin

# ======================
# EMAIL CONFIGURATION (SMTP)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mnanjeeba@gmail.com
SMTP_PASS=smxipmkzhiigjese
SMTP_FROM=mnanjeeba@gmail.com

# ======================
# EMAIL VERIFICATION
# ======================
EMAIL_VERIFICATION_ENABLED=false
VERIFICATION_CODE_EXPIRY_MINUTES=15
VERIFICATION_CODE_LENGTH=6
PENDING_ACCOUNT_CLEANUP_HOURS=24

# Password Reset
PASSWORD_RESET_TTL=1h
EMAIL_VERIFICATION_TTL=24h

# ======================
# RATE LIMITING
# ======================
# Maximum requests per window
RATE_LIMIT_MAX=100
# Window duration in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Specific endpoint rate limits
REGISTER_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_WINDOW_MS=900000
# 5 registrations per 15 minutes

LOGIN_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_WINDOW_MS=900000
# 10 login attempts per 15 minutes

PASSWORD_RESET_RATE_LIMIT_MAX=3
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
# 3 password reset requests per hour

# ======================
# SECURITY
# ======================
# Enable/disable security features
ENABLE_HTTPS_REDIRECT=false
# Set to true in production

# Session Security
SESSION_SECRET=your_super_secret_session_key_change_this
COOKIE_SECURE=false
# Set to true in production (requires HTTPS)

# ======================
# DEMO MODE
# ======================
DEMO_MODE=false
# Set to true to enable demo features with limited functionality

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ======================
# FILE UPLOAD
# ======================
MAX_FILE_SIZE=5242880
# 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
