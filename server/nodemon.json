{
    "watch": [
        "src"
    ],
    "ext": "ts",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "exec": "node --require ts-node/register --no-warnings src/index.ts",
    "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "NODE_ENV": "development"
    },
    "legacyWatch": true,
    "delay": "1000"
}